@page "/"
@page "/Weather/New"

@inherits EditorComponentBase
@namespace CEC.RoutingSample.Pages
    <div class="alert alert-secondary mb-5" role="alert">
        <p class="mb-0">Basic form control demonstrating controlled routing and navigation.</p>
        <p class="mb-0">Change the temperature away from 0 and try and navigate away from the page on a left hand menu item or one of your favourites.</p>
        <p class="mb-0">Change it back to 0 and try again.</p>
    </div>
<div class="container-fluid">
    <EditForm EditContext="this.EditContext">

        <div class="form-group row">
            <label class="col-4 col-form-label">
                Record Date
            </label>
            <div class="col-4">
                <InputDate class="form-control" @bind-Value="this.Record.Date"></InputDate>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-form-label">
                Temperature &deg; C
            </label>
            <div class="col-2">
                <InputNumber class="form-control" @bind-Value="this.Record.TemperatureC"></InputNumber>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-form-label">
                Summary
            </label>
            <div class="col-8">
                <InputText class="form-control" @bind-Value="this.Record.Summary"></InputText>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <UIAlert Alert="this.Alert"></UIAlert>
            </div>
            <div class="col-4 text-right">
                @if (this.ExitAttempt)
                {
                    <button type="button" class="btn btn-warning" @onclick="this.Cancel">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="this.ConfirmExit">Exit Without Save</button>
                }
                @if (!this.IsClean)
                {
                    <button type="button" class="btn btn-success" @onclick="this.Save">Save</button>
                }
                @if (this.IsClean)
                {
                    <button type="button" class="btn btn-primary" @onclick="this.ConfirmExit">Exit</button>
                }
            </div>
        </div>
    </EditForm>
</div>
<div class="alert alert-info mt-5" role="alert">
    <p class="mb-0">For a more professional implementation of this page using form controls that tie directly into the record shadowcopy go to <a href="https://github.com/ShaunCurtis/CEC.FormControls"> CEC.FormControls</a></p>
</div>