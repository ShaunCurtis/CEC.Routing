@page "/"
@page "/Weather/New"

@inherits EditorComponentBase
@namespace CEC.RoutingSample.Pages

<div class="container-fluid">
    <EditForm EditContext="this.EditContext">

        <UIAlert Alert="this.Alert"></UIAlert>

        <div class="form-group row">
            <label class="col-4 col-form-label">
                Record Date
            </label>
            <div class="col-4">
                <InputDate class="form-control" @bind-Value="this.Record.Date"></InputDate>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-form-label">
                Temperature &deg; C
            </label>
            <div class="col-2">
                <InputNumber class="form-control" @bind-Value="this.Record.TemperatureC"></InputNumber>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-form-label">
                Summary
            </label>
            <div class="col-8">
                <InputText class="form-control" @bind-Value="this.Record.Summary"></InputText>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-right">
                @if (this.ExitAttempt)
                {
                    <button type="button" class="btn btn-warning" @onclick="this.Cancel">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="this.ConfirmExit">Exit Without Save</button>
                }
                @if (!this.IsClean)
                {
                    <button type="button" class="btn btn-success" @onclick="this.Save">Save</button>
                }
                @if (this.IsClean)
                {
                    <button type="button" class="btn btn-primary" @onclick="this.ConfirmExit">Exit</button>
                }
            </div>
        </div>
    </EditForm>
</div>